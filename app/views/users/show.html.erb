<%= provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
       <!-- gravatar_forでメールアドレスに紐づいた画像を表示-->
       <%= gravatar_for @user %>
       <%= @user.name %>
      </h1>
    </section>
  </aside>
  <!-- 13.2.1 userに紐づくmicropostを表示 -->
  <div class="col-md-8">
    <!-- userに紐づくmicropostがあるか -->
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <!-- 順序付きリストでmicropostを表示 -->
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
